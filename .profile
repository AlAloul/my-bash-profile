#   Change Prompt
#   ------------------------------------------------------------
    reset="\033[0;0m"
    fill="--- "
    reset_style='\[\033[00m\]'
    status_style=$reset_style'\[\033[0;90m\]' # gray color; use 0;37m for lighter color
    prompt_style=$reset_style
    dir_color="\033[0;32m"
    git_color="\033[2;37m"
    ti_color="\033[2;36m"
    alloy_color="\033[0;36m"
    prompt_color=$reset
    find-up() {
      path=$(pwd)
      while [[ "$path" != "" && ! -e "$path/$1" ]]; do
        path=${path%/*}
      done
      if [ "$path" != "" ]
      	then
      	echo "$path"
      fi
    }

    cecho() {
    	echo -en "\[$2\]$1\[$reset\]"
    }

    parse_git_branch() {
        version=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
        if [ ! -z "$version" ]
    		then
            cecho ", Git: " $reset
    		cecho "$version" $git_color
    		[[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]] && cecho "*" $git_color
    		cecho $reset
    	fi
    }

    parse_alloy_version() {
    	version=$(alloy --version 2> /dev/null | sed -e 's/\(.*\)/\1/')
    	if [ ! -z "$version" ]; then
    		cecho " â€¡ " $reset
    		cecho "$version" $alloy_color
    	fi
    	cecho ")" $reset
    }

    parse_titanium_version() {
    	tiapp=`find-up tiapp.xml`
    	if [ -z "$tiapp" ]; then return; fi
    	tiversion=$(cat "$tiapp/tiapp.xml" 2> /dev/null | sed -n 's/<sdk-version>\(.*\)<\/sdk-version>/\1/p' | tr -d ' \t\n\r\f')
    	if [ -z "$tiversion" ]; then return; fi
    	cecho ", ti version: " $reset
    	cecho "$tiversion" $ti_color
    	parse_alloy_version
    }

    parse_prompt() {
    	cecho "=> " $prompt_color
    }

    # export PS1="\n($dir_color\w\[$reset\])$(parse_git_branch)$(parse_titanium_version)\n$(parse_prompt)"

    update_prompt() {
        # create a $fill of all screen width minus the time string and a space:
        let fillsize=${COLUMNS}-12
        fill=""
        while [ "$fillsize" -gt "0" ]
        do
            fill="-${fill}" # fill with underscores to work on
            let fillsize=${fillsize}-1
        done

        # If this is an xterm set the title to user@host:dir
        case "$TERM" in xterm*|rxvt*)
            bname=`basename "${PWD/$HOME/~}"`
            echo -ne "\033]0;${bname}: ${USER}@${HOSTNAME}: ${PWD/$HOME/~}\007"
            ;;
        *)
            ;;
        esac

        export PS1="\n$status_style\@ $fill\n$reset[ Dir: $dir_color\w\[$reset\]$(parse_git_branch)$(parse_titanium_version) ]\n$(parse_prompt)"
    }
    PROMPT_COMMAND=update_prompt
